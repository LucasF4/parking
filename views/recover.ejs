<%- include('./partials/head.ejs') %>
<style>
    .gradient-custom {
        /* fallback for old browsers */
        background: #6a11cb;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1));
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, rgba(106, 17, 203, 1), rgba(37, 117, 252, 1))
    }
</style>
<body class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card bg-dark text-white mb-5" style="border-radius: 1rem;">
            <div class="card-body p-5 text-center">
  
              <div class="mb-md-5 mt-md-4 pb-5">
  
                <h2 class="fw-bold mb-2 text-uppercase">Recover my account</h2>
                <p class="text-white-50 mb-5">Please enter your email!</p>
  
                <form action="/recover" method="POST">
                    <div class="form-outline form-white mb-4">
                        <p id="warning" style="color: red;"></p>
                        <input id="pass" type="text" name="newPass" class="form-control form-control-lg" required>
                        <label class="form-label">Informe sua nova senha</label>
                        <input id="confirm" type="text" name="confirm" class="form-control form-control-lg" required />
                        <label class="form-label">Repia sua senha</label>
                      </div>
        
                      <button id="send" class="btn btn-outline-light btn-lg px-5" type="submit" disabled>Send</button>
                      <!-- <a class="btn btn-outline-light btn-lg px-5" href="/">Cancelar</a> -->
                </form>
  
                <!-- <div class="d-flex justify-content-center text-center mt-4 pt-1">
                  <a href="#!" class="text-white"><i class="fa-brands fa-instagram fa-lg"></i></a>
                </div> -->
                
              </div>
  
              <div>
                <!-- <p class="mb-0">Don't have an account? <a href="/sing-up" class="text-white-50 fw-bold">Sign Up</a> -->
                </p>
              </div>
              
            </div>
            <p style="color: white; text-align: center;">Copyright © 2022 - All Rights Reserved <br> Author Lucas Félix - Beta Version: 1.0.0</p>

          </div>
        </div>
      </div>
    </div>
  </body>

  <script>

    var senha = document.getElementById('pass')
    var confirmar = document.getElementById('confirm')

    function validatePass(){
        if(senha.value != confirmar.value){
            document.getElementById('warning').innerHTML = 'As senhas devem ser iguais'
        }else{
            document.getElementById('warning').innerHTML = ""
            document.getElementById('send').disabled = false
        }
    }

    //senha.onchange = validatePass
    confirmar.onkeyup = validatePass

  </script>