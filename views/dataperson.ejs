<%- include('./partials/head.ejs') %>
<%- include('./partials/nav.ejs') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4"><div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
    <div class="p-4">

        <h4>Dados Pessoais</h4>
        <div class="p-4" style="box-shadow: 0 0 5px;">
            <h4>Informações da Conta</h4>
            <div class="me-3">
                <label class="form-label" style="font-weight: bold;">Username:</label><span> <%= perm.username %></span>
            </div>

            <div class="d-flex justify-content-around">
                <div>
                    <label class="form-label">Adress Email</label>
                    <input type="text" class="form-control" value="<%= perm.email %>" disabled/>
                </div>
                <div>
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" value="teste" disabled>
                </div>
                <div>
                    <label class="form-label">Meta Diária</label>
                    <input type="text" class="form-control" value="<%= perm.meta.replace('.', ',') %>" disabled>
                </div>
            </div>

            <!-- <div class="d-flex justify-content-center pt-3">
                <a href="/eidtPerson" class="btn btn-warning">Editar Informações do Usuário</a>
            </div> -->
            
            <hr>
            <h4>Licença de Uso</h4>

            <div class="mt-4 d-flex justify-content-between">
                <div>
                    <p>Licença acaba em: <%= perm.license %></p>
                    <p>Data do Pagamento: <%= perm.created %></p>
                    <% if(perm.pag != 1 ){ %>
                        <p>Duração: <%= perm.pag %> meses</p>
                    <% }else if(perm.pag == 12){ %>
                        <p>Duração: <%= perm.pag %> ano</p>
                    <% }else{ %>
                        <p>Duração: <%= perm.pag %> mês</p>
                    <% } %>
                </div>
                <div>
                    <p>CNPJ: <%= perm.cnpj %></p>
                </div>
            </div>

        </div>
        
    </div>
</main>